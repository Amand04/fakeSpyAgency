{% extends 'base.html.twig' %}
{% block title %}Les Planques
{% endblock %}
{% block body %}
	<div class="container">
		<h3 class="justify-content-center mt-5">Les Planques
		</h3>
	</div>
	<div class="container d-flex flex-wrap">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">id</th>
					<th scope="col">Code</th>
					<th scope="col">Adresse</th>
					<th scope="col">Pays</th>
					<th scope="col">Type</th>
					<th scope="col">Modifier</th>
					<th scope="col">Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for hideout in hideouts %}
					<tr>
						<th scope="row">{{ hideout.id }}</th>
						<td>{{ hideout.code }}</td>
						<td>{{ hideout.adress }}</td>
						<td>{{ hideout.country }}</td>
						<td>{{ hideout.type }}</td>
						<td>
							<a href="{{path('update_hideout', {id: hideout.id})}}">
								<i class="fas fa-edit"></i>
							</a>
						</td>
						<td>
							<a href="{{path('delete_hideout', {id: hideout.id})}}">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		{{ knp_pagination_render(hideouts)}}
		<div class="container d-flex flex-wrap">
			<a href="{{ path('app_registerHideout') }}" class="btn btn-primary mt-3">
				Ajouter une planque</a>
		</div>
	</div>
</div>{% endblock %}
