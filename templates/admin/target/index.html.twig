{% extends 'base.html.twig' %}
{% block title %}Les Cibles
{% endblock %}
{% block body %}
	<div class="container">
		<h3 class="justify-content-center mt-5">Les Cibles
		</h3>
	</div>
	<div class="container d-flex flex-wrap">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">id</th>
					<th scope="col">Nom</th>
					<th scope="col">Prénom</th>
					<th scope="col">Date de naissance</th>
					<th scope="col">Nom de code</th>
					<th scope="col">Nationalité</th>
					<th scope="col">Modifier</th>
					<th scope="col">Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for target in targets %}
					<tr>
						<th scope="row">{{ target.id }}</th>
						<td>{{ target.name }}</td>
						<td>{{ target.firstname }}</td>
						<td>{{ target.birthdayDate|date('Y-m-d H:i:s') }}</td>
						<td>{{ target.nameCode }}</td>
						<td>{{ target.nationality }}</td>
						<td>
							<a href="{{path('update_target', {id: target.id})}}">
								<i class="fas fa-edit"></i>
							</a>
						</td>
						<td>
							<a href="{{path('delete_target', {id: target.id})}}">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		{{ knp_pagination_render(targets)}}
		<div class="container d-flex flex-wrap">
			<a href="{{ path('app_registerTarget') }}" class="btn btn-primary mt-3">
				Ajouter une cible</a>
		</div>
	</div>
</div>{% endblock %}
