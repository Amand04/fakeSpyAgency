					</li>
					<ul class="navbar-nav position-absolute bottom-0 end-0 m-2 mb-lg-2">
						<li class="nav-item me-5">
							{{ app.user.userIdentifier }}
							<a href="{{ path('app_logout') }}">Déconnexion</a>
						</li>
					</ul>
