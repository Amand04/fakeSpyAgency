{% extends 'base.html.twig' %}
{% block title %}Détail de la Mission
	{{ mission.id }}
{% endblock %}
{% block body %}
	<div class="container md-3">
		<h3 class="justify-content-center mt-5">Détail de la Mission n°{{ mission.id }}</h3>
	</div>
	<div class="m-5 ">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">id</th>
					<th scope="col">Titre</th>
					<th scope="col">Description</th>
					<th scope="col">Nom de code</th>
					<th scope="col">Pays</th>
					<th scope="col">Type</th>
					<th scope="col">Status</th>
					<th scope="col">Créée le</th>
					<th scope="col">Clôturée le</th>
					<th scope="col">Spécialité requise</th>
					<th scope="col">Planque(s)</th>
					<th scope="col">Agent</th>
					<th scope="col">Contact</th>
					<th scope="col">Cible</th>
				</tr>
			</thead>
			<tr>
				<th scope="row">{{ mission.id }}
				</th>
				<td>{{ mission.title }}</td>
				<td>{{ mission.description }}</td>
				<td>{{ mission.nameCode }}</td>
				<td>{{ mission.country }}</td>
				<td>{{ mission.type }}</td>
				<td>{{ mission.status }}</td>
				<td>{{ mission.createdAt|date('Y-m-d H:i:s') }}</td>
				<td>{{ mission.closedAt|date('Y-m-d H:i:s') }}</td>
				<td>{{ mission.skills.name }}</td>
				<td>{{ mission.hideout ? mission.hideout.code : "" }}</td>
				<td>
					{% for agents in mission.agents %}
						{{ agents.code
						 }}
					{% endfor %}
				</td>
				<td>
					{% for contacts in mission.contacts %}
						{{ contacts.namecode
						 }}
					{% endfor %}
				</td>
				<td>
					{% for targets in mission.targets %}
						{{ targets.namecode
						 }}
					{% endfor %}
				</td>
			</tr>
		</td>
	</tr>
</table>
<div class="container d-flex flex-wrap">
	<a href="{{ path('app_missionIndex') }}" class="btn btn-primary mt-3">Retour à la liste des missions</a>
</div></div></div>{% endblock %}
